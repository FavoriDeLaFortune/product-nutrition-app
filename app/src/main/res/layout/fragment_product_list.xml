<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecipeListFragment">


    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
        android:id="@+id/searchEt"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/recipeRv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center" />

    <CheckBox
        android:id="@+id/autoCompleteCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/autoCompleteCheckBox"
        app:layout_constraintTop_toTopOf="@id/autoCompleteCheckBox"
        app:layout_constraintBottom_toBottomOf="@id/autoCompleteCheckBox"
        android:text="Only autocomlete check" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipeRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchEt" />
</androidx.constraintlayout.widget.ConstraintLayout>